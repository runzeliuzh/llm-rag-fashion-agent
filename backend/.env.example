# Environment variables - DO NOT COMMIT TO GITHUB
# Copy this file to .env and add your actual API keys

# LLM API Keys (get free keys from these providers)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
TOGETHER_API_KEY=your_together_api_key_here

DEEPSEEK_API_KEY=your_deepseek_api_key_here
# Frontend URL (change for production)
FRONTEND_URL=http://localhost:3000

# Crawler Security Token (change this to something secret)
CRAWLER_TOKEN=your_secret_crawler_token_here

# Cost Optimization Settings
MAX_DOCUMENTS=50
MAX_DAILY_CRAWLS=2
CRAWL_FREQUENCY_HOURS=24

# Railway Settings
PYTHONPATH=/app
PORT=8000
